---
import Container from "../components/Container.astro";
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import TitleSection from "../components/TitleSection.astro";
import CodeIcon from "../components/icons/Code.astro";
import Projects from "../components/Projects.jsx";
import ProfileCheckIcon from "../components/icons/ProfileCheck.astro";
import AboutMe from "../components/AboutMe.astro";
import Briefcase from "../components/icons/Briefcase.astro";
import Experience from "../components/Experience.astro";
---

<Layout title="My Astro Portfolio">
	<main class="px-4">
		<Container id="Banner" class="py-16 md:py-36">
			<Hero />
		</Container>
		<div class="space-y-24">
			<Container id="experiencia">
				<TitleSection>
					<Briefcase class="size-8" />
					Experiencia laboral
				</TitleSection>
				<Experience />
			</Container>
			<Container id="proyectos">
				<TitleSection>
					<CodeIcon class="size-7" />
					Proyectos
				</TitleSection>
				<Projects client:visible />
			</Container>
			<Container id="sobre-mi">
				<TitleSection>
					<ProfileCheckIcon class="size-7" />
					Sobre mi
				</TitleSection>
				<AboutMe />
			</Container>
		</div>
	</main>
</Layout>
